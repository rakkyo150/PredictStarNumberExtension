{
    "name": "PredictStarNumberExtension",
    "version": "1.2.0",
    "manifest_version": 3,
    "description": "Google Chrome Extension version of PredictStarNumber",
    "background": {
        "service_worker" : "backgroundDataGetter.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://beatsaver.com/*"
            ],
            "js": [
                "BeatSaver.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "https://scoresaber.com/*"
            ],
            "js": [
                "ScoreSaber.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "56e1e68ea283e1e243c0.wasm" ],
            "matches": [ "https://scoresaber.com/*", "https://beatsaver.com/*" ]
        }
    ],
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}
